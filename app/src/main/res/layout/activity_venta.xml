<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo"
    tools:context=".Venta">



    <TextView
        android:id="@+id/txtVenta"
        android:textSize="50dp"
        android:layout_marginTop="50dp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/venta"
        android:textColor="@color/white"
        android:shadowColor="@color/shadow"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="30"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="179dp" />

    <ImageView
        android:id="@+id/imgSell"
        android:layout_marginTop="50dp"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtVenta"
        app:srcCompat="@drawable/ventas" />

    <EditText
        android:id="@+id/edtBanana"
        android:paddingLeft="20dp"
        android:textColor="@color/fondo"
        android:background="@drawable/et_style"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="120dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Cantidad Banana: "
        app:layout_constraintTop_toBottomOf="@+id/imgSell"
        tools:layout_editor_absoluteX="53dp" />

    <ImageButton
        android:id="@+id/imgBanana"
        android:layout_marginTop="40dp"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toEndOf="@+id/edtBanana"
        app:layout_constraintTop_toBottomOf="@+id/imgSell"
        app:srcCompat="@drawable/banana" />

    <EditText
        android:id="@+id/edtBerenjena"
        android:paddingLeft="20dp"
        android:textColor="@color/fondo"
        android:background="@drawable/et_style"
        android:layout_marginTop="160dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="120dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Cantidad Berenjena: "
        app:layout_constraintTop_toBottomOf="@+id/imgSell"
        tools:layout_editor_absoluteX="53dp" />

    <ImageButton
        android:id="@+id/imgBerenjena"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toEndOf="@+id/edtBanana"
        app:layout_constraintTop_toBottomOf="@+id/imgBanana"
        app:srcCompat="@drawable/berenjena" />

    <EditText
        android:id="@+id/edtBrocoli"
        android:paddingLeft="20dp"
        android:textColor="@color/fondo"
        android:background="@drawable/et_style"
        android:layout_marginTop="260dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="120dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Cantidad Brocoli: "
        app:layout_constraintTop_toBottomOf="@+id/imgSell"
        tools:layout_editor_absoluteX="53dp" />

    <ImageButton
        android:id="@+id/imgBrocoli"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toEndOf="@+id/edtBanana"
        app:layout_constraintTop_toBottomOf="@+id/imgBerenjena"
        app:srcCompat="@drawable/brocoli" />

</androidx.constraintlayout.widget.ConstraintLayout>